.page-wrapper
    position relative
    .page-container
        position absolute
        top 20%
        left 35%
        width 35%
        border 1px solid grey
        box-shadow: 4px 5px 20px 6px #beacac
        border-radius 4px
        .game-heading
            padding: 10px;
            text-align: center;
            font-size: 25px;
            font-weight: bold;
            color: white;
            background-color: #03a9f4;
            border-top-left-radius: 4px;
            border-top-right-radius: 4px;
        .dashboard-details
            display flex
            .score-container
                flex-grow 1
                display flex
                .metric
                    flex-grow 1
                    text-align center
                    padding 10px 0 10px 0
            .reset-start
                flex-grow 0.5
                padding 10px 0 10px 0
                text-align center
                display flex
                justify-content space-evenly
                align-items center
        .game-display
            padding: 10px;
            background-color: #8080802e;
            height: 25vh;
            .display
                display: flex;
                justify-content: center;
                height: 100%;
                align-items: center;
                flex-direction: column;
                font-size: 20px;
                span 
                    font-weight bold
        .action-buttons
            display flex
            text-align center
            padding 15px
            .button
                flex-grow 1
.win-container,
.tie-container,
.lose-container
    background-color #e91e63bf
    color white

.win-container,
.lose-container
    border-right 1px dashed white
.disable
    pointer-events none 
    opacity 0.5